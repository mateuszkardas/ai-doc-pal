{
  "name": "ai-doc-pal",
  "version": "0.1.0",
  "description": "CLI tool for indexing markdown documentation and exposing it via MCP for AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ai-doc-pal": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "documentation",
    "embeddings",
    "vector-search",
    "sqlite-vec",
    "ollama",
    "openai",
    "cli",
    "rag"
  ],
  "author": "Mateusz KardaÅ›",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateuszkardas/ai-doc-pal.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "ora": "^9.0.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
